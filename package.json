{
  "name": "che-triage",
  "version": "0.0.0",
  "author": "Florent Benoit",
  "description": "bot for che",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^2.2.0",
    "@octokit/webhooks": "^7.5.0",
    "axios": "^0.21.1",
    "fs-extra": "^9.0.1",
    "inversify": "^5.0.5",
    "moment": "^2.29.2",
    "reflect-metadata": "^0.1.13",
    "semver": "^7.3.4",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^0.12.0",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.19",
    "@types/reflect-metadata": "^0.1.0",
    "@types/semver": "^7.3.4",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "cpx": "^1.5.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-no-null": "^1.0.2",
    "import-sort-style-eslint": "^6.0.0",
    "jest": "^26.6.3",
    "nexe": "4.0.0-beta.16",
    "prettier": "^2.2.1",
    "prettier-plugin-import-sort": "^0.0.6",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "build": "yarn run lint && yarn run test && yarn run compile",
    "compile": "tsc --project . && cpx './src/template/*.md' './dist/template' --clean",
    "format": "prettier --write **/*.ts **/**/*.ts package.json tests/_data/**/*.* tests/_data/**/**/*.*",
    "format-check": "prettier --check **/*.ts **/**/*.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "prettier": {
    "printWidth": 140,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "importSort": {
    ".ts": {
      "style": "eslint",
      "parser": "typescript"
    }
  }
}
