{
  "name": "che-triage",
  "version": "0.0.0",
  "author": "Florent Benoit",
  "description": "bot for che",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^2.2.0",
    "@octokit/webhooks": "^7.5.0",
    "axios": "^0.19.2",
    "fs-extra": "^9.0.0",
    "inversify": "^5.0.1",
    "reflect-metadata": "^0.1.13",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^0.7.2",
    "@types/fs-extra": "^8.1.0",
    "@types/jest": "^25.2.2",
    "@types/reflect-metadata": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "cpx": "^1.5.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.11.0",
    "eslint-plugin-no-null": "^1.0.2",
    "import-sort-style-eslint": "^6.0.0",
    "jest": "^25.0.0",
    "nexe": "4.0.0-beta.6",
    "prettier": "^2.0.5",
    "prettier-plugin-import-sort": "^0.0.4",
    "ts-jest": "^25.5.1",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "build": "yarn run lint && yarn run test && yarn run compile",
    "compile": "tsc --project . && cpx './src/template/*.md' './dist/template' --clean",
    "format": "prettier --write **/*.ts **/**/*.ts package.json tests/_data/**/*.* tests/_data/**/**/*.*",
    "format-check": "prettier --check **/*.ts **/**/*.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "prettier": {
    "printWidth": 140,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "importSort": {
    ".ts": {
      "style": "eslint",
      "parser": "typescript"
    }
  }
}
